<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="top"
        android:gravity="top|right">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|right"
            android:background="@drawable/decor" >

            <ImageView
                android:id="@+id/settings"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_height="40dp"
                android:layout_width="40dp"


                android:src="@mipmap/settings"
                />
        </RelativeLayout>

    </LinearLayout>



<LinearLayout
    android:layout_weight="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/btnStage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"

        android:text="STAGE 1"
        android:textColor="#fff"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/btnStage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"

        android:text="STAGE 2"
        android:textColor="#fff"
        android:textStyle="bold"
      />

    <Button
        android:id="@+id/btnStage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"
        android:text="STAGE 3"
        android:textColor="#fff"
        android:textStyle="bold"
    />
</LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="-60dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/decor_flip" />

    </LinearLayout>

</LinearLayout>