<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text=" SETTINGS "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textStyle="bold" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="MUSIC"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18dp"

        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:layout_marginLeft="16dp"
        />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Turn off/on all game music"
            android:textStyle="bold"
            android:textColor="#A9A9A9"
            android:textSize="10dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="16dp"
            />

    </LinearLayout>

    <Switch
        android:layout_gravity="center"
        android:id="@+id/switchMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:thumbTint="@color/colorPrimaryDark"
        android:trackTint="#ccc"
        />

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SOUND"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp"

                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Turn off/on all game sounds"
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:textSize="10dp"
                android:paddingLeft="16dp"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

        <Switch

            android:layout_gravity="center"
            android:id="@+id/switchSound"
            style="@style/AlertDialog.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:thumbTint="@color/colorPrimaryDark"
            android:trackTint="#ccc"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DIFFICULTY"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp"

                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Adjust your games difficulty"
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:textSize="10dp"

                android:paddingLeft="16dp"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/btnDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="ToggleButton 1"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:textOff="MEDIUM"
            android:textColor="#fff"
            android:buttonTint="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"

            android:textOn="HARD" />

    </LinearLayout>



</LinearLayout>