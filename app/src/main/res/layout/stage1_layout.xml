<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtStageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stage 1"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="26dp"
        android:layout_margin="16dp"
        />

        <LinearLayout
            android:id="@+id/layout_life"
            android:layout_toLeftOf="@+id/txtTimer"
            android:background="@drawable/card"
            android:layout_width="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">

        <ImageView
            android:id="@+id/imgLife"


           android:layout_margin="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/imgHint"
            android:src="@drawable/hearts"
            />

        <TextView
            android:id="@+id/txtLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imgLife"
            />

        </LinearLayout>

        <ImageView

            android:id="@+id/imgHint"
            android:background="@drawable/round"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/idea"
            />

        <TextView
            android:id="@+id/txtTimer"
            android:text=""
            android:gravity="center"
            android:textSize="25dp"

            android:background="@drawable/card"
           android:layout_toLeftOf="@+id/imgHint"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/idea"
            />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE: "
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/card"
        android:elevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:text="http://www3.fb.com/"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#ccc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:padding="16dp"
                android:text="Can you identify whether the Url is real of fake?"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnReal"
            android:layout_weight="1"
            android:text="REAL"
            android:layout_margin="18dp"
            android:textColor="#9B19E7"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/round_button_white"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnFake"
            android:layout_weight="1"
            android:text="FAKE"
            android:textColor="#9B19E7"
            android:textStyle="bold"
            android:layout_margin="18dp"
            android:textSize="20dp"
            android:background="@drawable/round_button_white"
            android:layout_width="120dp"
            android:layout_height="50dp" />

    </LinearLayout>

